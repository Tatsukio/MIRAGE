			var ^CArc pxArc=^(p_pxReaderNode^.GetArc());
			var int iVersion=p_pxReaderNode^.GetVersion();
			if(iVersion>=1)then
				m_xHeck.DoKArc(pxArc^);
				m_xSegel.DoKArc(pxArc^);
				m_xBug.DoKArc(pxArc^);
			endif;
			if(iVersion>=2)then
				m_xDummies.DoKArc(pxArc^);
			endif;
			if(iVersion>=3)then
				m_xKanone.DoKArc(pxArc^);
