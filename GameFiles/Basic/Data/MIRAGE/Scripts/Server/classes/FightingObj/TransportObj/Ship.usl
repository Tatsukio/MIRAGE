					pxPart^.SetDestructLevel(2);
					pxPart^.SetAnim("destroy",0,iLastAnimFrame);
					pxPartObj^.Delete();
				endif;
			endfor;
			var CObjList xDecks;
			if(m_xHeck.IsValid())then xDecks.Include(m_xHeck); endif;
			if(m_xBug.IsValid())then xDecks.Include(m_xBug); endif;
			if(m_xSegel.IsValid())then xDecks.Include(m_xSegel); endif;
			var int i,iC=xDecks.NumEntries();
			for(i=0)cond(i<iC)iter(i++)do
				if(xDecks[i].IsValid())then
					pxPartObj=xDecks[i].GetObj();
