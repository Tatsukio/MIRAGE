		m_pxVersionEdit^.SetTabStop(true);
		
		m_pxDescriptionEdit=cast<CEdit>(GetControl("GroupBoxMain/DescriptionEdit"));
		m_pxDescriptionEdit^.SetTabStop(true);
		
