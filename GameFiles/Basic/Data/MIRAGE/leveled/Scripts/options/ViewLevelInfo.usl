		m_pxItemsPool=m_pxItemsNode^.Get("Pool");
		if(m_pxItemsPool==null)then
			m_pxItemsPool=^(m_pxItemsNode^.AddValue("Pool",""));
		endif;
		m_pxItemsAll^.Clear();
		m_pxItemsUsed^.Clear();

		var array string asAllItems;
		var CTechTreeDef xTTDef;
		var CTechTree xTT=CTechTreeMgr.Get().GetTechTree(xTTDef);
		var ^CTechTree.CNode pxItemsRoot=xTT.FindNode("Items/Objects");
		if(pxItemsRoot!=null)then
			var int i,iC=pxItemsRoot^.NumSubs();
			for(i=0)cond(i<iC)iter(i++)do
				var ^CTechTree.CNode pxWalk=pxItemsRoot^.GetSub(i);
				var string sName=pxWalk^.GetName();
				asAllItems.AddEntry(sName);
			endfor;
		endif;

		var int i,iC=m_pxItemsPool^.NumSubs();
		for(i=0)cond(i<iC)iter(i++)do
			var ^CPropDB.CNode pxWalk=^(m_pxItemsPool^.Get(i));
			var string sName=pxWalk^.Name();
			if(sName.IsEmpty()) then continue; endif;
			var int iItemIdx=-1;
			var int k,ikC=asAllItems.NumEntries();
			for(k=0)cond(k<ikC)iter(k++)do
				if(asAllItems[k]==sName)then
					iItemIdx=k;
					break;
				endif;
			endfor;
			if(iItemIdx!=-1)then
				asAllItems.DeleteEntry(iItemIdx);
				m_pxItemsUsed^.AddItem(sName);
			endif;
		endfor;

		iC=asAllItems.NumEntries();
		for(i=0)cond(i<iC)iter(i++)do
			m_pxItemsAll^.AddItem(asAllItems[i]);
		endfor;
		m_pxItemsAll^.QSort();
		m_pxItemsUsed^.QSort();

		m_pxMaxItems^.m_xOnChange.Clear();
		m_pxMaxItems^.SetValue(m_pxItemsNode^.GetValueI("MaxItems",0));
		m_pxMaxItems^.m_xOnChange=OnChangeMaxItems;
	endproc;

	proc bool OnAddItem()
		var int i,iC=m_pxItemsAll^.NumItems();
		for(i=0)cond(i<iC)iter(++i)do
			if(!m_pxItemsAll^.IsItemSelected(i))then continue; endif;
			var string sItem=m_pxItemsAll^.GetItem(i);
			m_pxItemsUsed^.AddItem(sItem);
			m_pxItemsAll^.DeleteItem(i);i--;iC--;
			m_pxItemsPool^.AddValue(sItem,"");
		endfor;
		m_pxItemsUsed^.QSort();
		return true;
	endproc;

	proc bool OnDelItem()
		var int i,iC=m_pxItemsUsed^.NumItems();
		for(i=0)cond(i<iC)iter(++i)do
			if(!m_pxItemsUsed^.IsItemSelected(i))then continue; endif;
			var string sItem=m_pxItemsUsed^.GetItem(i);
			m_pxItemsAll^.AddItem(sItem);
			m_pxItemsUsed^.DeleteItem(i);i--;iC--;
			m_pxItemsPool^.Remove(sItem);
		endfor;
		m_pxItemsAll^.QSort();
		return true;
	endproc;

	proc bool OnChangeMaxItems()
		var int iMaxItems=m_pxMaxItems^.GetValueInt();
		m_pxItemsNode^.SetValue("MaxItems",iMaxItems);
		return true;
	endproc;

endclass;

class CLevelInfoMirage inherit CFrameWindow;
	
	var ^CPropDB.CNode	m_pxSourceNode;
	var ^CEdit					m_pxNodeName;
	var ^CEdit					m_pxNodeValue;
	var ^CButton				m_pxCreateNode;
	var ^CButton				m_pxRemoveNode;
	var string					m_sNodeName;
	var string					m_sNodeValue;
	
	export constructor()
		if(!InitFromResource("options/ViewLevelInfo","MirageSettings"))then
			CLevelEditorWrap.LogError("UI.ViewLevelInfo","InitFromResource failed");
			return;
		endif;
		
		m_pxNodeName=cast<CEdit>(GetControl("GroupBoxMain/NameEdit"));
		m_pxNodeName^.SetTabStop(true);
		
		m_pxNodeValue=cast<CEdit>(GetControl("GroupBoxMain/ValueEdit"));
		m_pxNodeValue^.SetTabStop(true);
		
	endconstructor;

	export proc void Init(^CPropDB.CNode p_pxSourceNode)
		m_pxSourceNode=p_pxSourceNode;
		if(m_pxSourceNode==null)then return; endif;
		
		m_pxNodeName^.m_xOnChange.Clear();
		m_pxNodeName^.SetText("");
		m_pxNodeName^.m_xOnChange=OnChangeNodeName;
		
		m_pxNodeValue^.m_xOnChange.Clear();
		m_pxNodeValue^.SetText("");
		m_pxNodeValue^.m_xOnChange=OnChangeNodeValue;
		
		m_pxCreateNode=cast<CButton>(GetControl("GroupBoxMain/CreateNode"));
		m_pxCreateNode^.m_xOnClick = OnCreateNode;
		
		m_pxRemoveNode=cast<CButton>(GetControl("GroupBoxMain/RemoveNode"));
		m_pxRemoveNode^.m_xOnClick = OnRemoveNode;
	endproc;
	
	proc bool OnChangeNodeName()
		var string sPrev=m_sNodeName;
		m_sNodeName=m_pxNodeName^.GetText();
		if(sPrev==m_sNodeName)then return true; endif;
		var ^CPropDB.CNode pxNode=^(m_pxSourceNode^.Get(m_sNodeName));
		if(pxNode!=null)then
			m_sNodeValue = pxNode^.Value();
			m_pxNodeValue^.SetText(m_sNodeValue);
		else
			m_sNodeValue="";
			m_pxNodeValue^.SetText("");
		endif;
		return(true);
	endproc;
	
	proc bool OnChangeNodeValue()
		var string sPrev=m_sNodeValue;
		m_sNodeValue=m_pxNodeValue^.GetText();
		if(sPrev==m_sNodeValue)then return true; endif;
		var ^CPropDB.CNode pxNode=^(m_pxSourceNode^.Get(m_sNodeName));
		if(pxNode!=null)then
			m_pxSourceNode^.SetValue(m_sNodeName,m_sNodeValue);
		endif;
		return(true);
	endproc;
	
	proc bool OnCreateNode()
		if(m_sNodeName=="")then return true; endif;
		if(m_pxSourceNode^.Get(m_sNodeName)!=null)then return true; endif;
		if(m_sNodeValue=="")then m_sNodeValue="0"; m_pxNodeValue^.SetText(m_sNodeValue); endif;
		m_pxSourceNode^.AddValue(m_sNodeName,m_sNodeValue);
		return true;
	endproc;
	
	proc bool OnRemoveNode()
		if(m_sNodeName=="")then return true; endif;
		if(m_pxSourceNode^.Get(m_sNodeName)==null)then return true; endif;
		m_pxSourceNode^.Remove(m_sNodeName);
		m_sNodeName="";
		m_sNodeValue="";
		m_pxNodeName^.SetText("");
		m_pxNodeValue^.SetText("");
		return true;
	endproc;
	
endclass;
