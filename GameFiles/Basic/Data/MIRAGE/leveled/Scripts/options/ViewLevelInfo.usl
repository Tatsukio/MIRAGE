			pxDB=pxItem^.GetPropDB();
			var ^CPropDB.CNode pxNode=^(pxDB^.GetRoot().Get("Tracks"));
			var int i;
			pxNode^.AddValue("Entry","");
			var ^CPropDB.CNode pxSubNode=^(pxNode^.Get(pxNode^.NumSubs()-1));
