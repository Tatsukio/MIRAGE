		m_sMapPreviewPath=sTmp;
		if(Filesystem.FileExists(m_sMapPreviewPath))then
			m_pxMapPreviewButton^.SetBitmap(m_sMapPreviewPath);
		endif;
		CStatusBar.Get().SetLevelName("Unnamed Map");
		*/
		return(true);
