		export static proc real MaxRange(real p_fSpeed,real p_fGravity)
			if(p_fGravity==0.0f)then
				return 10000000000000.0f;
			endif;
			return ((p_fSpeed*p_fSpeed)/p_fGravity)-20.0f;
		endproc;

