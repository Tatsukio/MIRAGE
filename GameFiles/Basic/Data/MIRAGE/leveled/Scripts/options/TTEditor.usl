		var string sPath=m_pxLS^.GetSelectedFile();
		sPath=sPath.Left(sPath.FindRev('/'));
		m_xConf.SetS("Editor/Windows/TTEditor/LoadSaveDialog/OpenPath",sPath);

		CloseLoadSave();
