			m_pxFollowAnim^.Clear();
			m_pxFollowAnim^.AddItem("None");
			var int i,iC=m_pxAnimations^.NumEntries();
			for(i=0)cond(i<iC)iter(i++)do
				m_pxFollowAnim^.AddItem(m_pxAnimations^[i]);
