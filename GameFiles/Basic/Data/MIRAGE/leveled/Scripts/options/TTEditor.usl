				endif;
				m_pxLocDescription^.SetDisabled((pxItemNode==null)||m_bEditsDisabled);
				m_pxLocToolTip^.SetDisabled((pxItemNode==null)||m_bEditsDisabled);
				m_pxLocIconPath^.SetDisabled((pxItemNode==null)||m_bEditsDisabled);
